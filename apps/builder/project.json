{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "builder",
  "sourceRoot": "apps/builder",
  "projectType": "application",
  "tags": ["type:app", "scope:webapp"],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/builder/**/*.{ts,tsx}"]
      }
    },
    "generate-css": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/builder",
        "command": "npx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/builder",
        "commands": [
          "npx nx run builder:generate-css --watch",
          "npx remix dev"
        ],
        "parallel": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/builder",
        "commands": [
          "npx nx run builder:generate-css --minify",
          "npx remix build"
        ],
        "parallel": false
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx remix-serve build",
        "cwd": "apps/builder"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tsc --noEmit -p apps/builder/tsconfig.json"],
        "parallel": false
      }
    },
    "build-docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build --tag 'marble-builder-app' -f ./apps/builder/Dockerfile --rm ."
      }
    }
  }
}
