{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": ["node"],
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "moduleTypes": { "src/scripts/**": "esm" },
    "require": ["dotenv/config", "tsconfig-paths/register"]
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "src/scripts/generate.ts"
  ],
  "exclude": ["jest.config.ts", "**/*.spec.ts"]
}
