{
  "name": "tailwind-preset",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/tailwind-preset/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/tailwind-preset/**/*.ts"]
      }
    },
    "tailwind-preset-gen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node -P tsconfig.lib.json src/scripts/generate.ts",
        "cwd": "./libs/tailwind-preset"
      }
    }
  },
  "tags": ["type:util", "scope:shared"]
}
