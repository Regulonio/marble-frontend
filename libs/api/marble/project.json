{
  "name": "api-marble",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/api/marble/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/api/marble/**/*.ts"]
      }
    },
    "generate-api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -r esbuild-register src/scripts/generate.ts",
        "cwd": "./libs/api/marble"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["npx tsc --noEmit -p libs/api/marble/tsconfig.lib.json"],
        "parallel": false
      }
    }
  },
  "tags": ["type:util", "scope:shared"]
}
