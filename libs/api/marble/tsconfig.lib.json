{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": ["node"],
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "moduleTypes": { "src/scripts/**": "esm" },
    "require": ["dotenv/config", "tsconfig-paths/register"]
  },
  "include": ["**/*.ts", "src/scripts/generate.ts"],
  "exclude": ["jest.config.ts", "**/*.spec.ts"]
}
